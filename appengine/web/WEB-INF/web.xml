<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
    <display-name>
      Push To Android Devices Services
    </display-name>

    <description>
      Allow you to force you phone sync from the cloud
    </description>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>send</servlet-name>
        <url-pattern>/send</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>org.push2android.AuthServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>send</servlet-name>
        <servlet-class>org.push2android.SendServlet</servlet-class>
    </servlet>


</web-app>
